generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  EDITOR
}

enum ListingStatus {
  DRAFT
  PUBLISHED
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  passwordHash  String?
  role          Role      @default(USER)
  favorites     Favorite[]
  leads         Lead[]
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Listing {
  id            String         @id @default(cuid())
  headline      String
  slug          String         @unique
  summary       String
  story         String
  status        ListingStatus  @default(DRAFT)
  price         Int?
  priceOnRequest Boolean       @default(false)
  beds          Int
  baths         Int
  sqft          Int
  acreage       Float?
  style         String
  country       String
  city          String
  featured      Boolean        @default(false)
  videoUrl      String?
  brochureUrl   String?
  media         ListingMedia[]
  collections   CollectionItem[]
  leads         Lead[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model ListingMedia {
  id        String   @id @default(cuid())
  listingId String
  listing   Listing  @relation(fields: [listingId], references: [id])
  url       String
  alt       String
  position  Int      @default(0)
}

model Collection {
  id        String           @id @default(cuid())
  name      String
  slug      String           @unique
  summary   String
  items     CollectionItem[]
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}

model CollectionItem {
  id           String     @id @default(cuid())
  collectionId String
  listingId    String
  position     Int        @default(0)
  collection   Collection @relation(fields: [collectionId], references: [id])
  listing      Listing    @relation(fields: [listingId], references: [id])
}

model Article {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  excerpt   String
  content   String
  status    ListingStatus @default(DRAFT)
  coverUrl  String
  author    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Lead {
  id         String   @id @default(cuid())
  name       String
  email      String
  phone      String?
  message    String
  listingId  String?
  listing    Listing? @relation(fields: [listingId], references: [id])
  userId     String?
  user       User?    @relation(fields: [userId], references: [id])
  createdAt  DateTime @default(now())
}

model NewsletterSubscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  listingId String
  user      User     @relation(fields: [userId], references: [id])
  listing   Listing  @relation(fields: [listingId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, listingId])
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User     @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
